{
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.vq": "binary",
        "*.pvr": "binary",
        "*.adx": "binary"
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/src/**",
        "${workspaceFolder}/include/**",
        "/opt/toolchains/dc/kos/include",
        "/opt/toolchains/dc/kos/addons/include",
        "/opt/toolchains/dc/kos-ports/include"
    ],
    "C_Cpp.default.defines": [
        "_arch_dreamcast",
        "DREAMCAST",
        "MAX_PLAYERS=4",
        "TARGET_FPS=60",
        "DEBUG"
    ],
    "C_Cpp.default.compilerPath": "/opt/toolchains/dc/sh-elf/bin/sh-elf-gcc",
    "C_Cpp.default.cStandard": "c99",
    "C_Cpp.default.cppStandard": "c++11",
    "C_Cpp.errorSquiggles": "enabled",
    
    "editor.rulers": [80, 100],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    
    "files.exclude": {
        "**/*.o": true,
        "**/*.elf": true,
        "**/*.bin": true,
        "build/": false,
        "romdisk/": false
    },
    
    "terminal.integrated.env.linux": {
        "KOS_BASE": "/opt/toolchains/dc/kos",
        "KOS_PORTS": "/opt/toolchains/dc/kos-ports",
        "DC_TOOLS": "/opt/toolchains/dc/bin",
        "PATH": "${env:PATH}:/opt/toolchains/dc/bin:/opt/toolchains/dc/sh-elf/bin"
    },
    
    "docker.defaultRegistryPath": "dreamcast-dev",
    
    "cSpell.words": [
        "Dreamcast",
        "KallistiOS",
        "raylib",
        "VRAM",
        "PowerVR",
        "fixed",
        "mult",
        "divs",
        "sqrt",
        "romdisk",
        "pvr",
        "vmu",
        "maple",
        "gdrom"
    ],
    
    "search.exclude": {
        "**/build": true,
        "**/romdisk/*.o": true,
        "**/*.elf": true,
        "**/*.bin": true,
        "**/*.cdi": true,
        "**/*.iso": true
    },
    
    "files.watcherExclude": {
        "**/build/**": true,
        "**/*.cdi": true,
        "**/*.iso": true
    },
    
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    
    "cmake.configureOnOpen": false,
    "cmake.buildDirectory": "${workspaceFolder}/build",
    
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "OPTIMIZE",
        "HACK",
        "REVIEW",
        "PERF",
        "MEMORY",
        "NOTE"
    ],
    
    "cursor.cpp.includePath": [
        "${workspaceFolder}/src/**",
        "${workspaceFolder}/include/**",
        "/opt/toolchains/dc/kos/include",
        "/opt/toolchains/dc/kos/addons/include"
    ],
    
    "cursor.cpp.compilerPath": "/opt/toolchains/dc/sh-elf/bin/sh-elf-gcc",
    
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "markdown": true
    }
}
