    "search.exclude": {
        "**/build": true,
        "**/romdisk/*.o": true,
        "**/*.elf": true,
        "**/*.bin": true,
        "**/*.cdi": true,
        "**/*.iso": true
    },
    "files.watcherExclude": {
        "**/build/**": true,
        "**/*.cdi": true,
        "**/*.iso": true
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "cmake.configureOnOpen": false,
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "OPTIMIZE",
        "HACK",
        "REVIEW",
        "PERF",
        "MEMORY",
        "NOTE"
    ],
    "cursor.cpp.includePath": [
        "${workspaceFolder}/src/**",
        "${workspaceFolder}/include/**",
        "/opt/toolchains/dc/kos/include",
        "/opt/toolchains/dc/kos/addons/include"
    ],
    "cursor.cpp.compilerPath": "/opt/toolchains/dc/sh-elf/bin/sh-elf-gcc",
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "markdown": true
    },
    "telemetry.telemetryLevel": "off",
    "statusBar.items": [
        "dreamcast.memoryUsage",
        "dreamcast.fps",
        "dreamcast.buildStatus"
    ],
    "dreamcast.performance.enabled": true,
    "dreamcast.performance.otelEndpoint": "http://localhost:4317",
    "dreamcast.performance.otelPath": "/Users/punk1290/git/local-otel",
    "dreamcast.performance.showInStatusBar": true,
    "dreamcast.performance.warnThreshold": {
        "frameTime": 16.67,
        "memoryUsage": 14680064,
        "entityCount": 80
    },
    "problemMatcher": [
        {
            "name": "dreamcast-memory",
            "owner": "dreamcast",
            "fileLocation": [
                "relative",
                "${workspaceFolder}"
            ],
            "pattern": {
                "regexp": "^MEMORY WARNING: (.*) exceeds (\\d+) KB limit$",
                "message": 1,
                "severity": "warning"
            }
        },
        {
            "name": "dreamcast-performance",
            "owner": "dreamcast",
            "fileLocation": [
                "relative",
                "${workspaceFolder}"
            ],
            "pattern": {
                "regexp": "^PERF WARNING: (.*) took (\\d+\\.\\d+) ms \\(target: (\\d+\\.\\d+) ms\\)$",
                "message": 1,
                "severity": "warning"
            }
        }
    ],
    "terminal.integrated.profiles.linux": {
        "Dreamcast Shell": {
            "path": "/bin/bash",
            "args": [
                "-c",
                "docker run -it --rm -v ${workspaceFolder}:/workspace -w /workspace dreamcast-dev /bin/bash"
            ],
            "icon": "terminal-bash"
        }
    },
    "terminal.integrated.defaultProfile.linux": "Dreamcast Shell",
    "debug.console.fontSize": 12,
    "debug.console.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
    "debug.console.wordWrap": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 80,
    "workbench.colorCustomizations": {
        "statusBar.background": "#1a1a1a",
        "statusBar.foreground": "#ffffff",
        "statusBar.debuggingBackground": "#ff6600",
        "statusBar.debuggingForeground": "#ffffff"
    },
    "customTasks.statusbar": [
        {
            "label": "$(database) Build DC",
            "task": "Build Game",
            "tooltip": "Build Dreamcast Game"
        },
        {
            "label": "$(play) Run DC",
            "task": "Run in Emulator",
            "tooltip": "Run in Dreamcast Emulator"
        },
        {
            "label": "$(graph) Profile",
            "task": "Monitor Performance",
            "tooltip": "Monitor Performance Metrics"
        }
    ],
    "C_Cpp.default.compilerArgs": [
        "-Wall",
        "-Wextra",
        "-Werror",
        "-Wno-unused-parameter",
        "-Wno-unused-variable",
        "-fno-exceptions",
        "-fno-rtti",
        "-ffast-math",
        "-O2"
    ]
}